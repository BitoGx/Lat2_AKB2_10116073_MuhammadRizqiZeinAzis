<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/HomeTxtShadowActivity"
                android:layout_width="match_parent"
                android:layout_height="151dp"
                android:background="@drawable/border" />

            <TextView
                android:id="@+id/HomeTxtHeaderActivity"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/ic_header_profile" />

            <TextView
                android:id="@+id/HomeTxtMenuActivity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:drawableStart="@drawable/ic_side_menu"
                android:drawableLeft="@drawable/ic_side_menu"
                android:drawableEnd="@drawable/ic_notification"
                android:drawableRight="@drawable/ic_notification"
                android:text="" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/HomeCircleProfileActivity"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="140dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="110dp"
                android:layout_marginEnd="140dp"
                android:layout_marginRight="140dp"
                android:src="@drawable/img"
                android:textAlignment="center"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="3dp"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="283dp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/HomeTxtNameActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/muhammad_rizqi_zein_azis"
                android:textColor="#41B3E7" />

            <TextView
                android:id="@+id/HomeTxtBloodActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/blood_type_b"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/updownborder"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/HomeTxtFirstNumberActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/_75"
                    android:textAlignment="center"
                    android:textColor="#41B3E7"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/HomeTxtSecondNumberActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/_100"
                    android:textAlignment="center"
                    android:textColor="#41B3E7"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/HomeTxtThirdNumberActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/_330"
                    android:textAlignment="center"
                    android:textColor="#41B3E7"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/homeTxtFirstTextActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/blood_give"
                    android:textAlignment="center"
                    android:textColor="#59595B"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/homeTxtSecondTextActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/blood_receive"
                    android:textAlignment="center"
                    android:textColor="#59595B"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/homeTxtThirdTextActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/thanks"
                    android:textAlignment="center"
                    android:textColor="#59595B"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/HomeImgSearchActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@string/search_donor"
                        app:srcCompat="@drawable/ic_search_donor" />

                    <ImageView
                        android:id="@+id/HomeImgBloodActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@string/blood_needed"
                        app:srcCompat="@drawable/ic_blood_needed" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/HomeTxtSearchFirstActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/search_donor"
                        android:textAlignment="center"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/HomeTxtBloodNeedFirstActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/blood_needed"
                        android:textAlignment="center"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/HomeTxtSearchSecondActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/search_donor_near_you"
                        android:textAlignment="center"
                        android:textColor="#59595B"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/HomeTxtBloodNeedSecondActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/_4_users_need_blood"
                        android:textAlignment="center"
                        android:textColor="#59595B"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/HomeImgMessageActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@string/message"
                        app:srcCompat="@drawable/ic_message" />

                    <ImageView
                        android:id="@+id/HomeImgHistoryActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@string/history_donor"
                        app:srcCompat="@drawable/ic_donor_history" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/homeTxtMessageFirstActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/message"
                        android:textAlignment="center"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/homeTxtDonorHistoryFirstActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/history_donor"
                        android:textAlignment="center"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/homeTxtMessageSecondActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/_5_new_messages"
                        android:textAlignment="center"
                        android:textColor="#59595B"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/homeTxtDonorHistorySecondActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/_5_gives_2_received"
                        android:textAlignment="center"
                        android:textColor="#59595B"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>